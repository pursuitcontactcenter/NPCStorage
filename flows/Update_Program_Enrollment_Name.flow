<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>61.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <description>Updates the name of the program enrollment record after it&apos;s saved to &quot;FirstName LastName -- ProgramName&quot;.</description>
    <environments>Default</environments>
    <formulas>
        <name>nameFormula</name>
        <dataType>String</dataType>
        <expression>{!$Record.Account.FirstName}&amp;&quot; &quot;&amp;{!$Record.Account.LastName}&amp;&quot; -- &quot;&amp;{!$Record.Program.Name}</expression>
    </formulas>
    <interviewLabel>*Update Program Enrollment Name {!$Flow.CurrentDateTime}</interviewLabel>
    <label>*Update Program Enrollment Name</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Update_Program_Enrollment_Name</name>
        <label>Update Program Enrollment Name</label>
        <locationX>176</locationX>
        <locationY>323</locationY>
        <inputAssignments>
            <field>Name</field>
            <value>
                <elementReference>nameFormula</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Update_Program_Enrollment_Name</targetReference>
        </connector>
        <object>ProgramEnrollment</object>
        <recordTriggerType>Create</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
